html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  width: 100%;
  overflow: hidden;
  font-family: sans-serif;
}
canvas {
  display: block;
  width: 100%;
  height: 100%;
  touch-action: none;
  border: 1px solid black;
  position: absolute;
  top: 0;
  left: 0;
}
#controls {
  position: fixed;
  top: 10px;
  left: 10px;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  gap: 5px;
  background-color: rgba(0,0,0,0.4);
  padding: 10px;
  border-radius: 8px;
  width: max-content;
}
.buttons {
  display: flex;
  gap: 10px;
}
button {
  padding: 10px 15px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
  font-size: 14px;
}
#drawEraseBtn { 
  background-color: #4CAF50; 
  color:white; 
  width: 70px; 
}
#clearBtn { background-color: red; color:white; }
#sizeContainer {
  display: flex;
  align-items: center;
  gap: 5px;
  margin-top: 5px;
  width: 100%;
}
#sizeSlider { width: 100%; cursor:pointer; }
#onlineCounter {
  margin-top: 5px;
  background-color: #333;
  color: white;
  padding: 5px 10px;
  border-radius: 6px;
  font-size: 14px;
  text-align: center;
}
label { color:white; }
